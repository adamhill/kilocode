{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["CI", "KILO_DISABLE_SHARE"],
  "globalPassThroughEnv": ["CI", "KILO_DISABLE_SHARE"],
  "tasks": {
    "typecheck": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "opencode#test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "@opencode-ai/app#test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "@kilocode/kilo-docs#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["POSTHOG_API_KEY", "FREE_TIER_AMOUNT"]
    }
  }
}
